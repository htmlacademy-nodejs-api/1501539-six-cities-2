{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "nodemon",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "node --import ./src/ts-loader.js",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 5566"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-beta.3",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "type": "module",
  "engines": {
    "node": "^22.0.0",
    "npm": ">=10"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.20.0",
    "chalk": "^5.6.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "got": "^14.4.9",
    "inversify": "^7.10.2",
    "mongoose": "^8.19.1",
    "pino": "^9.12.0",
    "reflect-metadata": "^0.2.2"
  }
}
